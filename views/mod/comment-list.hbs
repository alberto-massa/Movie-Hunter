<div class="container mod_container">
    <h2>List of unfiltered comments</h2>
    <div class="row justify-content-center mt-5">
        {{#each theComments}}
        <div class="col-md-2 mb-3 comment_container">
            <p>Author: {{authorId.username}}</p>
            <p>Rating: {{rating}}</p>
            <p>Comment: <br>{{content}}</p>
            <a class="btn btn-primary" href="/mod/{{_id}}/accept">Accept</a>
            <a class="btn btn-danger" href="/mod/{{_id}}/delete">Delete</a>
            <hr>
        </div>
        {{/each}}
    </div>
</div>