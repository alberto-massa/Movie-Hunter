<div id="wrapper">
    <section class="movie">
        <div class="movie-content parallax">
            <h1>Ironmovies_</h1>
            <p>Scroll down to check the latest movies</p>
        </div>
    </section>
</div>

<div class="container index_container">
    <div id="errorMsg">{{errorMsg}}</div>

    <div id="g1" class="glide">
        <h2 class="mb-3">Trending movies</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">     
                {{#each movieData.popularData.results}}
                <li class="glide__slide">
                    <figure>
                        <a href="/movies/{{id}}"><img loading="lazy" class="card-img-top" src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="Image of {{original_title}}" style="width: 100%"></a>
                        <figcaption>
                            <h5 style="font-size: 18px; font-weight: 400" class="card-title">{{original_title}}</h5>
                            <p style="font-size: 16px; opacity: 0.8" class="card-text text-center">{{release_date}}</p>
                            <a href="/movies/{{id}}" class="btn btn-primary">See details</a>
                        </figcaption>
                    </figure>            
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div id="g2" class="glide">
        <h2 class="mb-3">Upcoming movies</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                {{#each movieData.upcomingData.results}}
                <li class="glide__slide">
                    <figure>
                        {{#if poster_path}}
                        <a href="/movies/{{id}}"><img loading="lazy" style="width: 100%" class="card-img-top" src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="Image of {{original_title}}"></a>
                        {{else}}
                        <a href="/movies/{{id}}"><img loading="lazy" style="width: 100%" class="card-img-top" src="https://res.cloudinary.com/nyhz/image/upload/v1631550529/tymvvaz11mv6dxviqszz.jpg"
                            alt="Image of {{original_title}}"></a>
                        {{/if}}
                        <figcaption>
                            <h4 class="card-title">{{original_title}}</h4>
                            <p class="card-text">{{release_date}}</p>
                            <a href="/movies/{{id}}" class="btn btn-primary">See details</a>
                        </figcaption>
                    </figure>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <script src="/js/glide.min.js"></script>
    <script src="/js/glide.js"></script>

</div>