<div class="container index_container">
    <div id="errorMsg">{{errorMsg}}</div>
    
    <div id="g1" class="glide">
        <h2 class="mb-3">Trending movies</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">     
                {{#each movieData.popularData.results}}
                <li class="glide__slide">
                    <figure>
                        <img class="card-img-top" src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="Image of {{original_title}}" style="width: 100%">
                        <figcaption>
                            <h5 class="card-title">{{original_title}}</h5>
                            <p class="card-text text-center">{{release_date}}</p>
                            <a href="/movies/{{id}}" class="btn btn-outline-primary">See details</a>
                        </figcaption>
                    </figure>            
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div id="g2" class="glide">
        <h2 class="mb-3">Upcoming movies</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
                {{#each movieData.upcomingData.results}}
                <li class="glide__slide">
                    <figure>
                        {{#if poster_path}}
                        <img style="width: 100%" class="card-img-top" src="https://image.tmdb.org/t/p/original{{poster_path}}" alt="Image of {{original_title}}">
                        {{else}}
                        <img style="width: 100%" class="card-img-top" src="https://res.cloudinary.com/nyhz/image/upload/v1631550529/tymvvaz11mv6dxviqszz.jpg"
                            alt="Image of {{original_title}}">
                        {{/if}}
                        <figcaption>
                            <h4 class="card-title">{{original_title}}</h4>
                            <p class="card-text">{{release_date}}</p>
                            <a href="/movies/{{id}}" class="btn btn-primary">See details</a>
                        </figcaption>
                    </figure>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <script src="/js/glide.min.js"></script>
    <script src="/js/glide.js"></script>

</div>