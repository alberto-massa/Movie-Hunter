<div class="container user-list_container justify-content-center">
    <div class="col-md-12 mt-5">
        <h1 class="text-center">Active Users</h1>
        <hr class="mb-5">
        {{#each user}}
        <div class="row d-flex justify-content-around align-items-center">
            <div class="col-md-2 rounded">
                <img src="{{avatar}}" alt="user avatar">
            </div>
            <div class="col-md-2">
                <p class="ml-3">{{username}}</p>
            </div>
            <div class="col-md-4">
                <p class="ml-3 t-3">{{email}}</p>
            </div>
            <div class="col-md-2">
                <div class="row">
                    <form class="form-inline" action="/admin/edit/{{username}}" method="GET">
                        <button class="btn btn-primary" type="submit">Edit</button>
                    </form>
                    {{!-- <a class="btn btn-danger ml-2" href="/admin/delete/{{_id}}">Delete</a> --}}
                    <a class="btn btn-danger ml-2" href="/admin/delete-user/{{_id}}">Delete</a>
                </div>  
            </div>
        </div>
        <hr>
        {{/each}}
    </div>
</div>