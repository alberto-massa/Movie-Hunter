<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 img_col">
            <h2>{{movieData.original_title}}</h2>
            <img src="https://image.tmdb.org/t/p/original{{movieData.poster_path}}" alt="Image of {{movieData.original_title}}">

        </div>
        <div class="col-md-6">
            <form action="/movies/{{movieData.id}}/addcomment" method="POST">

                <div class="form-group">
                    <input type="hidden" class="form-control" id="movieRef" name="movieRef" value="{{movieData.id}}">
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input type="range" min="0" max="10" step="1" class="form-control" id="rating" name="rating">
                </div>
                <div class="form-group purple-border">
                    <textarea name="content" id="content" cols="80" rows="10" maxlength="1000" minlength="10"></textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Send comment!</button>

            </form>
        </div>
    </div>
</div>