<div class="container justify-content-center">
    <div class="row justify-content-center mt-3">
        <div class="col-md-5 ">
            <h2 class="mb-5">Received Messages</h2>
            {{#each receivedMessages}}
                <div class="col-md-12 mb-5 received">
                
                <h4><i class="fas fa-user-edit"></i> Sent by <a href="/user/profile/{{authorId.username}}"> <br>{{authorId.username}}</a></h4>
                <h4 class="mt-3"><i class="far fa-envelope"></i> Subject <br>{{subject}}</h4>
                <br>
                <p>{{content}}</p>
            </div>
            {{/each}}
        </div>
        <div class="col-md-5">
            <h2 class="mb-5">Sent Messages</h2>
            {{#if sentMessages}}
            {{#each sentMessages}}
            <div class="col-md-12 mb-5 sent">
                
                <h4><i class="fas fa-user-edit"></i> Sent to <a href="/user/profile/{{receiverId.username}}"> <br> {{receiverId.username}}</a></h4>
                <h4 class="mt-3"><i class="far fa-envelope"></i> Subject <br>{{subject}}</h4>
                <br>
                <p>{{content}}</p>
            </div>
            {{/each}}
            {{/if}}
            
        </div>
    </div>
</div>

