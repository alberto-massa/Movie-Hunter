<div class="container justify-content-center">
    <div class="row justify-content-center mt-3">
        <div class="col-md-5">
            <h2 class="mb-5">Received Messages</h2>
            {{#each receivedMessages}}
            <h4>Sent by: <a href="/user/profile/{{authorId.username}}">{{authorId.username}}</a></h4>
            <h4>Subject: {{subject}}</h4>
            <p>{{content}}</p>
            <hr>
            <br>
            {{/each}}
        </div>
        <div class="col-md-5">
            <h2 class="mb-5">Sent Messages</h2>
            {{#each sentMessages}}
            <h4>Sent to: <a href="/user/profile/{{receiverId.username}}">{{receiverId.username}}</a></h4>
            <h4>Subject: {{subject}}</h4>
            <p>{{content}}</p>
            <hr>
            <br>
            {{/each}}
        </div>
    </div>
</div>

