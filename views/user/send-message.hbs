<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/user/sendmsg/{{targetUser}}" method="post">
                <div class="form-group">
                    <label for="username">Sender</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{user.username}}" readonly>
                </div>
                <div class="form-group">
                    <label for="targetUser">Send to:</label>
                    <input type="text" class="form-control" id="targetUser" name="targetUser" value="{{targetUser}}" readonly>
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" class="form-control" id="subject" name="subject">
                </div>
                <div class="form-group">
                    <label for="content">Message</label>
                    <input type="text" class="form-control" id="content" name="content">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>