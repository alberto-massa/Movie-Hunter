<div class="container profile_container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <img src="{{this.avatar}}" alt="Default user avatar">
        </div>
        <div class="col-md-6">
            <h2>{{this.username}}</h2>
            <p>{{this.role}}</p>
        </div>
    </div>
    {{#if isMod}}
    <a class="btn btn-primary" href="/user/edit-profile">Edit</a>
    {{/if}}
</div>