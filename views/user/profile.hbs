<div class="container profile_container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <img src="{{this.avatar}}" alt="Default user avatar">
            <form action="/user/sendmsg/{{this.username}}" method="get">
                <button class="btn btn-danger btn-block mt-3" type="submit">Send Message</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>{{this.username}}</h2>
            <p>{{this.role}}</p>
            <p>{{this.email}}</p>
        </div>
    </div>
</div>